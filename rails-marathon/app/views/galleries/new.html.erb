<h1>New Gallery Form</h1>

<%= form_for (@gallery) do |f| %>
  <div>
    <%= f.label :name, "Name" %><br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :city, "City" %><br>
    <%= f.text_field :city %>
  </div>

  <div>
    <%= f.label :state, "State" %><br>
    <%= f.text_field :state %>
  </div>

  <div>
    <%= f.label :zip, "Zip" %><br>
    <%= f.text_field :zip %>
  </div>

  <div>
    <%= f.label :description, "Description" %><br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.submit "Add Gallery" %><br><br>
    <%= link_to 'All Galleries', galleries_path %>
  </div>
<% end %>
